<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saikikwok.minilinkedin.MainActivity">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/basic_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/profile_image"
                android:layout_toStartOf="@+id/profile_image">

                <TextView
                    android:id="@+id/basic_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    tools:text="Saiki"/>

                <ImageButton
                    android:id="@+id/edit_basic_info_btn"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_border_color_black_18dp"
                    android:contentDescription="@string/edit_basic_info"
                    android:background="?attr/selectableItemBackground"/>

            </LinearLayout>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/name_layout"
                android:textSize="24sp"
                tools:text="xxx@xxx.com"/>

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/profile_photo"
                android:src="@drawable/g12_girl"
                android:background="?attr/selectableItemBackground"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/education_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/section_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/section_title_education"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/section_education"
                    android:textSize="24sp"
                    android:textAllCaps="true"
                    />

                <ImageButton
                    android:id="@+id/edit_education_btn"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/edit_education"
                    android:src="@drawable/ic_add_black_18dp"
                    android:background="?attr/selectableItemBackground"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/education_entries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/school_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        tools:text="NEU"/>

                    <TextView
                        android:id="@+id/school_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        tools:text="(2015.9 - 2017.12)"/>
                </LinearLayout>


                <ImageButton
                    android:id="@+id/edit_school_info_btn"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/edit_school"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_border_color_black_18dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/courses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="-Algorithm\n-Computer System\n-Networking"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
